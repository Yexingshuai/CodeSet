<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="uitest.star.com.uiset.demo.framework.service.ServiceActivity">

    <include layout="@layout/toolbar_layout" />


    <Button
        android:id="@+id/bt_start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start方式开启服务" />

    <Button
        android:id="@+id/bt_stop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start方式关闭服务" />


    <Button
        android:id="@+id/bt_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bind方式开启服务" />


    <Button
        android:id="@+id/bt_bind_stop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bind方式解绑服务" />

    <Button
        android:id="@+id/bt_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹出" />

</LinearLayout>
